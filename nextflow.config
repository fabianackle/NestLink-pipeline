process {
    shell = ['/bin/bash', '-euo', 'pipefail']
}

profiles {
    standard {
        conda.enabled = true
        conda.useMamba = true
        process.cpus = 8
    }
    cluster {
        conda.enabled = true
        conda.useMamba = true
        conda.createTimeout = '60 m'
        singularity.enabled = true
        singularity.cacheDir = '/data/user/'
        singularity.runOptions = '--nv'
        process.executor = 'slurm'
        singularity.pullTimeout = '60 m'
    }
}